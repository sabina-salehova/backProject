@{
    SpeakerDeleteViewModel sdvm = Model;
    List<Speaker> speakers = sdvm.Speakers;
    List<EventSpeaker> eventSpeakers = sdvm.EventSpeakers;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Speaker Table</h4>
                <a class="btn btn-primary" asp-action="create">Create</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Fullname</th>
                                <th>Position</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var speaker in speakers)
                            {
                                <tr>
                                    <td>@(@speaker.Name + " " + @speaker.Surname)</td>
                                    <td>@speaker.Position</td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="details" asp-route-id="@speaker.Id">Details</a>
                                        <a class="btn btn-success" asp-action="update" asp-route-id="@speaker.Id">Update</a>
                                        <div class="d-inline-block">
                                            @if (eventSpeakers.Any(x => x.SpeakerId == speaker.Id))
                                            {
                                                <b style="color:firebrick">istifade edilir</b>
                                            }
                                            else
                                            {
                                                <form class="forms-sample" method="post" asp-action="delete" asp-route-id="@speaker.Id">
                                                    <button type="submit" class="btn btn-danger mr-2">Delete</button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>